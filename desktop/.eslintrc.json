{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "jest": true
  },
  "globals": {
    "React": true,
    "module": true,
    "process": true,
    "global": true
  },
  "plugins": ["react"],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "indent": [2, 2, { "SwitchCase": 1 }],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-alert": [1],
    "no-unused-vars": [0],
    "no-console": [0],
    "react/display-name": [0, { "ignoreTranspilerName": true }]
  }
}
